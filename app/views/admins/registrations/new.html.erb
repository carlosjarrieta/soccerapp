<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="mdl-layout mdl-js-layout color--gray is-small-screen login">
  <main class="mdl-layout__content">
    <div class="mdl-card mdl-card__login mdl-shadow--2dp">
      <div class="mdl-card__supporting-text color--dark-gray">
        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
            <span class="mdl-card__title-text text-color--smooth-gray">SOCCER BOARD</span>
          </div>
          <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
            <span class="login-name text-color--white">CREA TU CUENTA</span>
          </div>
          <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'mdl-textfield__input' %>
              <%= f.label :email, class: 'mdl-textfield__label' %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
              <%= f.text_field :name, autofocus: true, class:'mdl-textfield__input' %>
              <%= f.label :name, class: 'mdl-textfield__label' %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
              <%= f.text_field :phone, autofocus: true, class:'mdl-textfield__input' %>
              <%= f.label :phone, class: 'mdl-textfield__label' %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
              <%= f.label :password, class:'mdl-textfield__label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'mdl-textfield__input' %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
              <%= f.label :password_confirmation, class:'mdl-textfield__label' %>
              <%= f.password_field :password_confirmation, class: 'mdl-textfield__input' %>
            </div>

            <%= render "admins/shared/links" %>
          </div>
          <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone submit-cell">
            <div class="mdl-layout-spacer"></div>

            <%= f.submit "LOGIN", class: "mdl-button mdl-js-button mdl-button--raised color--light-blue" %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
<% end %>
